{
  "type": "module",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "nodenext",
    "types": [
      "node"
    ],
    "declaration": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowImportingTsExtensions": true
  }
}
